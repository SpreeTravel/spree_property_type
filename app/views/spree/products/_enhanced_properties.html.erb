<div data-hook="product_properties">

  <% unless @product_properties.hash_for(:left).empty? %>
      <% for title in @product_properties.hash_for(:left).keys %>

          <h6 class="product-section-title"><%= title %></h6>

          <table id="product-properties-<%=title.downcase.underscore %>" class="table-display" data-hook width="100%">
            <tbody>
            <% for product_property in @product_properties.hash_for(:left)[title] %>
                <% css_class = cycle('even', 'odd') %>
                <tr class="<%= css_class %>">
                  <td><strong><%= product_property.property.presentation %></strong></td>
                  <td class="derecha"><%= product_property.value %></td>
                </tr>
            <% end %>
            </tbody>
          </table>

      <% end %>
  <% end %>

</div>
