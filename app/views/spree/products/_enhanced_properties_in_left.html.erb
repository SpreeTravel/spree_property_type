<div data-hook="product_properties">

  <% ConstantPropertyType::PROPERTIES_LEFT.each do |show_type| %>
    <% unless @product_properties.hash_for(show_type).empty? %>
      <% for title in @product_properties.hash_for(show_type).keys %>

        <h6 class="product-section-title"><%= title %></h6>

        <% if show_type == ConstantPropertyType::PROPERTY_SHOW_LEFT_NORMAL %>

          <table id="product-properties-<%=title.downcase.underscore %>" class="table-display" data-hook width="100%">
            <tbody>
            <% for product_property in @product_properties.hash_for(show_type)[title] %>
              <% css_class = cycle('even', 'odd') %>
              <tr class="<%= css_class %>">
                <td><strong><%= product_property.property.presentation %></strong></td>
                <td class="derecha"><%= product_property.value %></td>
              </tr>
            <% end %>
            </tbody>
          </table>

        <% elsif show_type == ConstantPropertyType::PROPERTY_SHOW_LEFT_NAME %>

          <table id="product-properties-<%=title.downcase.underscore %>" class="table-display" data-hook width="100%">
            <tbody>
            <% for product_property in @product_properties.hash_for(show_type)[title] %>
              <% css_class = cycle('even', 'odd') %>
              <tr class="<%= css_class %>">
                <td><strong><%= product_property.property.presentation %></strong></td>
              </tr>
            <% end %>
            </tbody>
          </table>

        <% elsif show_type == ConstantPropertyType::PROPERTY_SHOW_LEFT_BOTH %>

          <table id="product-properties-<%=title.downcase.underscore %>" class="table-display" data-hook width="100%">
            <tbody>
            <% for product_property in @product_properties.hash_for(show_type)[title] %>
              <% css_class = cycle('even', 'odd') %>
              <tr class="<%= css_class %>">
                <td><%= image_tag product_property.property.icon(:mini) %></td>
                <td class="derecha"><%= product_property.value %></td>
              </tr>
            <% end %>
            </tbody>
          </table>

        <% elsif show_type == ConstantPropertyType::PROPERTY_SHOW_LEFT_ICON %>

          <ul class="thumbnails inline" data-hook>
            <% @product_properties.hash_for(show_type)[title].each do |product_property| %>
              <li class='tmb-all'>
                <%= image_tag(product_property.property.icon(:mini), :border => 1) %>
              </li>
            <% end %>
          </ul>

        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
